; This file is for unifying the coding style for different editors and IDEs.
; More information at http://EditorConfig.org

; GLOBAL SETUP
[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

; MARKDOWN
[*.md]
trim_trailing_whitespace = false

; JAVASCRIPT
[**.js]
indent_style = space
indent_size = 2

[**.html]
indent_style = space
indent_size = 2

[**.css]
indent_style = space
indent_size = 2

; YAML
;[*.yml]
;indent_style = space
;indent_size = 2
